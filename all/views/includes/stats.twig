<div class="c-tab-card t-tab-card">
	<div class="c-tab-bar-frame t-tab-bar-frame">
		<nav class="c-tab-bar t-tab-bar" role="tablist" data-toggle="tabs">
			<a class="c-tab t-tab is-active" href="#statistics" role="tab" aria-controls="statistics">
				<svg class="o-icon c-tab-icon t-tab-icon"><use xlink:href="#stats"></use></svg>
				<span class="c-tab-text t-tab-text">{{lang.stats}}</span>
			</a>
			<a class="c-tab t-tab" href="#whos-online" role="tab" aria-controls="whos-online">
				<svg class="o-icon c-tab-icon t-tab-icon"><use xlink:href="#online"></use></svg>
				<span class="c-tab-text t-tab-text">{{lang.whos_online}}</span>
			</a>
			<a class="c-tab t-tab" href="#birthdays" role="tab" aria-controls="birthdays">
				<svg class="o-icon c-tab-icon t-tab-icon"><use xlink:href="#cake"></use></svg>
				<span class="c-tab-text t-tab-text">{{lang.bday}}</span>
			</a>
		</nav>
	</div>
	<div class="c-tab-pane t-tab-pane is-active" id="statistics" role="tabpane">
		<div class="c-tab-pane-row t-tab-pane-row">
			<ul class="c-stat-list c-tab-pane-stats t-tab-list t-tab-pane-stats">
				<li class="c-stat-item t-stat-item">{{lang.total_posts}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.posts}}</span></li>
				<li class="c-stat-item t-stat-item">{{lang.total_topics}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.topics}}</span></li>
				<li class="c-stat-item t-stat-item">{{lang.total_members}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.members}}</span></li>
				<li class="c-stat-item t-stat-item">{{lang.most_online}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.online.most}}</span></li>
				<li class="c-stat-item t-stat-item">{{lang.newest_member}}
					<a class="o-tag c-stat-badge c-stat-badge-link t-stat-badge" href="{{stats.newest.profile}}">{{stats.newest.name}}</a>
				</li>
			</ul>
		</div>
	</div>
	<div class="c-tab-pane t-tab-pane" id="whos-online" role="tabpane">
		<div class="c-tab-pane-row t-tab-pane-row">
			<h4 class="c-tab-pane-title t-tab-pane-title">{{lang.registered_users}}{{lang.colon}}</h4>
			<span class="c-tab-pane-text t-tab-text">
				{% for item in online %}
					{% if item.group %}
						{% if item.bot %}
							<span style="color: {{item.group}};">{{item.name}}</span>
						{% else %}
							<a class="c-tab-pane-link" href="{{item.profile}}" style="color: {{item.group}};">{{item.name}}</a>
						{% endif %}
					{% else %}
						<a class="c-tab-pane-link" href="{{item.profile}}">{{item.name}}</a>
					{% endif %}
					{% if loop.last %}{% else %}, {% endif %}
				{% endfor %}
			</span>
		</div>
		<div class="c-tab-pane-row t-tab-pane-row">
			<div class="c-stat-wrap s-stat-wrap">
				<ul class="c-stat-list c-tab-pane-stats t-stat-list t-tab-pane-stats">
					<li class="c-stat-item t-stat-item">{{lang.total_online}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.online.current}}</span></li>
					<li class="c-stat-item t-stat-item">{{lang.registered}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.online.registered}}</span></li>
					<li class="c-stat-item t-stat-item">{{lang.hidden}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.online.hidden}}</span></li>
					<li class="c-stat-item t-stat-item">{{lang.guests}} <span class="o-tag c-stat-badge t-stat-badge">{{stats.online.guests}}</span></li>
				</ul>
				<span class="c-stat-info t-stat-info">{{lang.stats.stats_disclaimer}}</span>
			</div>
		</div>
		<div class="c-tab-pane-footer t-tab-pane-footer">
			<h4 class="c-tab-pane-title t-tab-pane-title">{{lang.legend}}{{lang.colon}}</h4>
			<span class="c-tab-pane-text t-tab-pane-text">
				{% for item in groups %}
					<a class="c-tab-pane-link t-tab-pane-link" style="color:{{item.color}};" href="{{item.url}}">{{item.name}}</a>
					{% if loop.last %}{% else %}, {% endif %}
				{% endfor %}
			</span>
		</div>
	</div>
	<div class="c-tab-pane t-tab-pane" id="birthdays" role="tabpane">
		<div class="c-tab-pane-row t-tab-pane-row">
			<h4 class="c-tab-pane-title t-tab-pane-title">{{lang.congrats}}{{lang.colon}} </h4>
			<span class="c-tab-pane-text t-tab-pane-text">
				{% for item in birthdays %}
					{% if item.group %}
						<a class="c-tab-pane-link" href="{{item.profile}}" style="color: {{item.group}};">{{item.name}}</a> ({{item.age}})
					{% else %}
						<a class="c-tab-pane-link" href="{{item.profile}}">{{item.name}}</a> ({{item.age}})
					{% endif %}
					{% if loop.last %}{% else %}, {% endif %}
				{% endfor %}
			</span>
		</div>
	</div>
</div>
